{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "Restaurant.System.Web": {
      "projectType": "application",
      "schematics": {},
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "src/main.ts",
            "tsConfig": "tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "node_modules/bootstrap/dist/css/bootstrap.min.css",
              "src/custom-theme.scss",
              "src/tailwind-output.css"
            ],
            "server": "src/main.server.ts",
            "outputMode": "server",
            "ssr": {
              "entry": "src/server.ts"
            },
            "outputPath": "dist/Restaurant.System.Web",
            "baseHref": "/restaurant-system/"
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "options": {
            "proxyConfig": "src/proxy.conf.json",
            "host": "0.0.0.0",
            "allowedHosts": [
              ".gitpod.dev",
              ".gitpod.io"
            ]
          },
          "configurations": {
            "production": {
              "buildTarget": "Restaurant.System.Web:build:production"
            },
            "development": {
              "buildTarget": "Restaurant.System.Web:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n"
        },
        "test": {
          "builder": "@angular/build:unit-test",
          "options": {
            "tsConfig": "tsconfig.spec.json",
            "buildTarget": "::development",
            "runner": "vitest"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "src/**/*.ts",
              "src/**/*.html"
            ]
          }
        }
      }
    },
    "auth": {
      "projectType": "library",
      "root": "projects/libs/auth",
      "sourceRoot": "projects/libs/auth/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/libs/auth/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/libs/auth/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:unit-test",
          "options": {
            "tsConfig": "projects/libs/auth/tsconfig.spec.json"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/libs/auth/**/*.ts",
              "projects/libs/auth/**/*.html"
            ],
            "eslintConfig": "projects/libs/auth/eslint.config.js"
          }
        }
      }
    },
    "forms": {
      "projectType": "library",
      "root": "projects/libs/forms",
      "sourceRoot": "projects/libs/forms/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/libs/forms/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/libs/forms/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:unit-test",
          "options": {
            "tsConfig": "projects/libs/forms/tsconfig.spec.json"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/libs/forms/**/*.ts",
              "projects/libs/forms/**/*.html"
            ],
            "eslintConfig": "projects/libs/forms/eslint.config.js"
          }
        }
      }
    },
    "mat-forms": {
      "projectType": "library",
      "root": "projects/libs/mat-forms",
      "sourceRoot": "projects/libs/mat-forms/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/libs/mat-forms/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/libs/mat-forms/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:unit-test",
          "options": {
            "tsConfig": "projects/libs/mat-forms/tsconfig.spec.json"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/libs/mat-forms/**/*.ts",
              "projects/libs/mat-forms/**/*.html"
            ],
            "eslintConfig": "projects/libs/mat-forms/eslint.config.js"
          }
        }
      }
    }
  },
  "cli": {
    "analytics": "fda32eca-2165-483e-89ed-06917fb98778",
    "schematicCollections": [
      "angular-eslint"
    ]
  }
}
