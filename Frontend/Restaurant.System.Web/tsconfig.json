/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "paths": {
      "auth": [
        "./dist/auth"
      ],
      "@rs/forms": [
        "./dist/forms"
      ]
    },
    "module": "preserve",
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true,
    "enableIve": false
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    },
    {
      "path": "./projects/tsconfig.lib.json"
    },
    {
      "path": "./projects/tsconfig.spec.json"
    },
    {
      "path": "./projects/libs/auth/tsconfig.lib.json"
    },
    {
      "path": "./projects/libs/auth/tsconfig.spec.json"
    },
    {
      "path": "./projects/libs/forms/tsconfig.lib.json"
    },
    {
      "path": "./projects/libs/forms/tsconfig.spec.json"
    }
  ]
}
