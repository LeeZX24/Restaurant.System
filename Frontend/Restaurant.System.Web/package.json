{
  "name": "restaurant.system.web",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:Restaurant.System.Web": "node dist/Restaurant.System.Web/server/server.mjs",
    "lint": "ng lint",
    "build:tailwind": "node build-tailwind.js",
    "serve:dev": "node --max_old_space_size=6144 node_modules/@angular/cli/bin/ng serve --configuration development",
    "build:production": "ng build --configuration=production --base-href /Restaurant.System/",
    "build:forms:ng": "ng build forms --watch=false",
    "build:forms:tailwind": "npx @tailwindcss/cli -i projects/libs/forms/src/styles.css -o dist/forms/styles.css --content \"projects/libs/forms/src/lib/**/*.{ html, ts }\" --minify",
    "build:forms": "npm run build:forms:ng && npm run build:forms:tailwind"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^21.0.3",
    "@angular/common": "^21.0.4",
    "@angular/compiler": "^21.0.4",
    "@angular/core": "^21.0.4",
    "@angular/forms": "^21.0.4",
    "@angular/material": "^21.0.3",
    "@angular/platform-browser": "^21.0.4",
    "@angular/platform-server": "^21.0.4",
    "@angular/router": "^21.0.4",
    "@angular/ssr": "^21.0.3",
    "@ngx-translate/core": "^17.0.0",
    "bootstrap": "^5.3.8",
    "dayjs": "^1.11.19",
    "express": "^5.2.1",
    "ngx-mask": "^20.0.3",
    "ngx-toastr": "^19.1.0",
    "ngx-translate": "^0.0.1-security",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@angular-eslint/eslint-plugin": "^21.1.0",
    "@angular-eslint/eslint-plugin-template": "^21.1.0",
    "@angular-eslint/schematics": "^21.1.0",
    "@angular-eslint/template-parser": "^21.1.0",
    "@angular/build": "^21.0.3",
    "@angular/cli": "^21.0.3",
    "@angular/compiler-cli": "^21.0.4",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.0",
    "angular-eslint": "^21.1.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "ng-packagr": "^21.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vitest": "^4.0.15"
  }
}
